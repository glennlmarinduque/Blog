<script>
  let  count = 1;
    $(document).ready(() => {
        $(".mooon_button").on("click",()=>{
            count++;
        console.log(count);
        if(count %2 ===0){
            $("body").attr("data-bs-theme","dark");
            } else if(count %2 !=0){
            $("body").attr("data-bs-theme","light");
